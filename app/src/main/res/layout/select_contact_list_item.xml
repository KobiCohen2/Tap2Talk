<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layoutDirection="ltr">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/default_image"
        android:id="@+id/listItemUserImage"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="8"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/select_contact_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text=""
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:gravity="center|start"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/select_contact_list_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:text=""
            android:gravity="center|start"
            android:layout_alignParentStart="true"
            android:textColor="#ffff"
            android:layout_below="@id/select_contact_list_item_name" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:buttonTint="@color/green"
            android:id="@+id/select_contacts_checkbox"/>
    </RelativeLayout>
</LinearLayout>